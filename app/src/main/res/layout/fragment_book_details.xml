<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayoutBookDetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_200"
    tools:context=".pages.fragment.BookDetails">

    <ImageView
        android:id="@+id/imageViewBookDetailsBookCover"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewBookDetailsBookCover">

        <TableRow>

            <TextView
                android:id="@+id/textViewBookDetailsTitleText"
                android:padding="5dp"
                android:text="Título"
                android:textAlignment="viewStart"
                android:textColor="@color/gray_700"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewBookDetailsTitle"
                android:gravity="right"
                android:padding="5dp"
                android:text="Título do livro"
                android:textAlignment="viewStart"
                android:textColor="@color/gray_700"
                android:textSize="14sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textViewBookDetailsAuthorText"
                android:padding="5dp"
                android:text="Autor"
                android:textAlignment="viewStart"
                android:textColor="@color/gray_700"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewBookDetailsAuthor"
                android:gravity="right"
                android:padding="5dp"
                android:text="Nome do autor"
                android:textAlignment="viewStart"
                android:textColor="@color/gray_700"
                android:textSize="14sp" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="24dp"
        android:text="Reservar"
        android:backgroundTint="@color/secondary_color_200"
        android:textColor="@color/gray_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/secondary_color_200"
        android:text="Devolver"
        android:textColor="@color/gray_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>